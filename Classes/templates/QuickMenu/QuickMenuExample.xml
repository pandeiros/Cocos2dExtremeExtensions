<?xml version="1.0" encoding="UTF-8"?>

<!--
    This is a sample menu for QuickMenu class from Cocos2D Extreme Extensions pack,
    featuring most of the functionalities and attributes it offers.
-->

<!-- Main menu with it's attributes. This node is OBLIGATORY as a root node. -->
<Menu Align="Vertical" Padding="10" Name="MainMenu">
  
  <!-- Sample label -->
  <Label Text="Main Menu"/>
  
  <!-- Item with callback and graphics -->
  <Image Normal="CloseNormal.png" Selected="CloseSelected.png" Callback="new_game" />

  <!-- Item leading to submenu -->
  <Image>
    <Menu Name="Options">
      <Image />
    </Menu>
  </Image>
  
</Menu>