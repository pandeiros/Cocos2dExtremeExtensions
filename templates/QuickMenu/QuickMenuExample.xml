<?xml version="1.0" encoding="UTF-8"?>

<!--
    This is a sample menu for QuickMenu class from Cocos2D Extreme Extensions pack,
    featuring most of the functionalities and attributes it offers.
-->

<!-- Main menu with it's attributes. This node is OBLIGATORY as a root node. -->
<Menu Align="Vertically" Padding="100.0" Name="MainMenu">

  <!-- Sample label -->
  <Label Text="Main Menu" Name="label_1" />

  <!-- Sample image -->
  <Image Normal="CloseNormal.png" Selected="CloseSelected.png" />

  <!-- Common properties for both Labels and Images -->
  <Label Color="#ff00ff" Callback="new_game" Name="image_1" />

  <!-- Label leading to submenu -->
  <Label Text="Options label">
    <Menu Align="Horizontally" Name="Options">
      <Label Text="Submenu Label" />
    </Menu>
  </Label>

</Menu>